<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Quinieleros.ViewModels"
             x:Class="Quinieleros.Views.GiveAway">

    <ContentPage.BindingContext>
        <viewModels:GiveAwayViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label Text="Nombre" VerticalOptions="Center" HorizontalOptions="Fill" />
        <Entry Text="{Binding Nombre, Mode=TwoWay }"/>
    </VerticalStackLayout>
</ContentPage>